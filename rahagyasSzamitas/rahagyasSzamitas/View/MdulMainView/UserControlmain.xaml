        <RadioButton Name="IT8" IsEnabled="False" Visibility="Hidden" Content="IT8" HorizontalAlignment="Left" Margin="243,40,0,0" VerticalAlignment="Top" Height="15" Grid.Row="2"/>
        <RadioButton Name="IT9" IsEnabled="False" Visibility="Hidden" Content="IT9" HorizontalAlignment="Left" Margin="243,59,0,0" VerticalAlignment="Top" Height="15" Grid.Row="2"/>
        <RadioButton Name="IT10" IsEnabled="False" Visibility="Hidden" Content="IT10" HorizontalAlignment="Left" Margin="243,79,0,0" VerticalAlignment="Top" Height="15" Grid.Row="2"/>
        <RadioButton Name="IT11" IsEnabled="False" Visibility="Hidden"  Content="IT11" HorizontalAlignment="Left" Margin="243,99,0,0" VerticalAlignment="Top" Height="15" Grid.Row="2"/>
        <RadioButton Name="IT12" IsEnabled="False" Visibility="Hidden" Content="IT12" HorizontalAlignment="Left" Margin="243,119,0,0" VerticalAlignment="Top" Height="14" Grid.Row="2"/>
        <RadioButton Name="IT13" IsEnabled="False" Visibility="Hidden" Content="IF13" HorizontalAlignment="Left" Margin="243,138,0,0" VerticalAlignment="Top" Height="15" Grid.Row="2"/>
        <RadioButton Name="IT14" IsEnabled="False" Visibility="Hidden" Content="IT14" HorizontalAlignment="Left" Margin="243,158,0,0" VerticalAlignment="Top" Height="15" Grid.Row="2"/>
        <RadioButton Name="IT15" IsEnabled="False" Visibility="Hidden" Content="IT15" HorizontalAlignment="Left" Margin="243,178,0,0" VerticalAlignment="Top" Grid.Row="2"/>
        <RadioButton Name="IT16" IsEnabled="False" Visibility="Hidden" Content="IT16" HorizontalAlignment="Left" Margin="243,193,0,0" VerticalAlignment="Top" Grid.Row="2"/>
        <StackPanel  Margin="49,72,547,248" Orientation="Vertical" Grid.Row="2" >
            <RadioButton Name="RBwrite" Content="felületi érdeséget adok meg" Checked="RadioButton_Checked_1" />
            <RadioButton Name="RBchoose" Content="IT számot választok" Checked="RadioButton_Checked" />
            <TextBox Name="texBoxRou" TextWrapping="Wrap" Text="felületi érdeség" />
        </StackPanel>
        <StackPanel Margin="49,0,556,316" Orientation="Vertical" Grid.Row="2">
            <RadioButton Content="hoszz" Checked="RadioButton_Checked_2" />
            <RadioButton Content="átmérö" Checked="RadioButton_Checked_3" >
            </RadioButton>
            <TextBox Name="texBoxSize" TextWrapping="Wrap" Text="méret mm " TextChanged="TextBox_TextChanged"/>
        </StackPanel>
        <Button x:Name="szmBT" Content="számol" HorizontalAlignment="Left" Margin="49,140,0,0" VerticalAlignment="Top" Height="27" Width="82" Grid.Row="2" Click="szmBT_Click"/>
        <StackPanel HorizontalAlignment="Center" Height="48" VerticalAlignment="Top" Width="768" Background="#FF62C2B7" Orientation="Horizontal" Grid.RowSpan="2">
            <Button  Content="" Width="51">
                <Button.Background>
                    <ImageBrush ImageSource="/View/MdulMainView/save_icon_top_left.png"/>
                </Button.Background>
            </Button>
            <Button Content="táblák modositása" Background="{x:Null}" Click="ShowTable"/>
            <Button Content="táblák megtekintése" Background="{x:Null}" Click="ShowTable"/>
        </StackPanel>
    </Grid>
</UserControl>
