<Window x:Class="rahagyasSzamitas.View.Tables.TableBaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rahagyasSzamitas.View.Tables"
        mc:Ignorable="d"
        Title="TableBaseWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <ListView x:Name="dataTable" d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Column 1" Width="120" DisplayMemberBinding="{Binding Path=sizeRangeMin}"/>
                        <GridViewColumn Header="Column 2" Width="120" DisplayMemberBinding="{Binding Path=sizeRangeMax}"/>
                        <GridViewColumn Header="Column 3" Width="120" DisplayMemberBinding="{Binding Path=Itnum}"/>
                        <GridViewColumn Header="Column 4" Width="120" DisplayMemberBinding="{Binding Path=size}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
